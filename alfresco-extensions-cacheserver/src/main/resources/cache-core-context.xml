    </bean>
 -->
    <bean id="transformService" class="org.alfresco.cacheserver.transform.AkkaTransformServiceImpl">
        <constructor-arg ref="textContentStore"/>
    </bean>

    <bean id="checksumService" class="org.alfresco.cacheserver.checksum.ChecksumServiceImpl">
        <constructor-arg ref="cacheMessageProducer"/>
        <constructor-arg ref="cacheServerIdentity"/>
        <constructor-arg ref="checksumDAO"></constructor-arg>
        <constructor-arg value="${cache.content.blockSize}"></constructor-arg>
    </bean>

    <bean id="modelLoader" class="org.alfresco.services.nlp.SpringClasspathModelLoader"/>

    <bean id="entitiesService" class="org.alfresco.cacheserver.entities.EntitiesServiceImpl" init-method="init">
        <constructor-arg value="CoreNLP"></constructor-arg>
        <constructor-arg ref="modelLoader"/>
        <constructor-arg ref="localContentGetter"/>
        <constructor-arg ref="entitiesDAO"/>
        <!-- 
        <property name="repoUsername" value="admin"/>
        <property name="repoPassword" value="admin"/>
        <property name="repoHost" value="localhost"/>
        <property name="repoPort" value="8080"/>
        <property name="repoSSLPort" value="8443"/>
        <property name="socketTimeout" value="60000"/>
        <property name="maxHostConnections" value="10"/>
        <property name="maxTotalConnections" value="10"/>
        <property name="commsType" value="HTTPS"/>
        <property name="sslKeyStoreLocation" value="classpath:ssl.repo.client.keystore"/>
        <property name="sslTrustStoreLocation" value="classpath:ssl.repo.client.truststore"/>
        <property name="sslKeyStoreType" value="JCEKS"/>
        <property name="sslTrustStoreType" value="JCEKS"/>
        <property name="sslKeyStoreProvider" value=""/>
        <property name="sslTrustStoreProvider" value=""/>
        <property name="sslKeyStorePasswordFileLocation" value="classpath:ssl-keystore-passwords.properties"/>
        <property name="sslTrustStorePasswordFileLocation" value="classpath:ssl-truststore-passwords.properties"/>
         -->
    </bean>

    <bean id="contentStore" class="org.alfresco.cacheserver.contentstore.ContentStore">
        <constructor-arg value="${cache.content.rootFolder}"></constructor-arg>
        <constructor-arg ref="checksumService"></constructor-arg>
    </bean>

    <bean id="textContentStore" class="org.alfresco.cacheserver.contentstore.ContentStore">
        <constructor-arg value="${cache.textcontent.rootFolder}"></constructor-arg>
        <constructor-arg ref="checksumService"></constructor-arg>
    </bean>

    <bean id="keyResourceLoader" class="org.alfresco.encryption.SpringKeyResourceLoader">
    </bean>

    <bean id="keyStoreParameters" class="org.alfresco.encryption.KeyStoreParameters">
        <constructor-arg value="${ssl.keyStore.name}"></constructor-arg>
        <constructor-arg value="${ssl.keyStore.type}"></constructor-arg>
        <constructor-arg value="${ssl.keyStore.provider}"></constructor-arg>
        <constructor-arg value="${ssl.keyStore.metadataFileLocation}"></constructor-arg>
        <constructor-arg value="${ssl.keyStore.location}"></constructor-arg>
    </bean>

    <bean id="trustStoreParameters" class="org.alfresco.encryption.KeyStoreParameters">
        <constructor-arg value="${ssl.trustStore.name}"></constructor-arg>
        <constructor-arg value="${ssl.trustStore.type}"></constructor-arg>
        <constructor-arg value="${ssl.trustStore.provider}"></constructor-arg>
        <constructor-arg value="${ssl.trustStore.metadataFileLocation}"></constructor-arg>
        <constructor-arg value="${ssl.trustStore.location}"></constructor-arg>
    </bean>

    <bean id="sslEncryptionParameters" class="org.alfresco.encryption.ssl.SSLEncryptionParameters">
        <constructor-arg ref="keyStoreParameters"></constructor-arg>
        <constructor-arg ref="trustStoreParameters"></constructor-arg>
    </bean>

    <bean id="repoClientBuilder" class="org.alfresco.services.RepoClientBuilder">
        <constructor-arg value="${repo.secureCommsType}"></constructor-arg>
        <constructor-arg ref="sslEncryptionParameters"></constructor-arg>
        <constructor-arg ref="keyResourceLoader"></constructor-arg>
        <constructor-arg value="${repo.hostname}"></constructor-arg>
        <constructor-arg value="${repo.port}"></constructor-arg>
        <constructor-arg value="${repo.sslPort}"></constructor-arg>
        <constructor-arg value="${repo.maxTotalConnections}"></constructor-arg>
        <constructor-arg value="${repo.maxHostConnections}"></constructor-arg>
        <constructor-arg value="${repo.socketTimeout}"></constructor-arg>
    </bean>

    <bean id="alfrescoApi" class="org.alfresco.services.AlfrescoApiImpl">
        <constructor-arg value="${repo.hostname}"/>
        <constructor-arg value="${repo.port}"/>
        <constructor-arg value="${repo.username}"/> 
        <constructor-arg value="${repo.password}"/>
    </bean>

    <bean id="contentGetter" class="org.alfresco.services.ContentGetterImpl">
        <constructor-arg value="${repo.hostname}"></constructor-arg>
        <constructor-arg value="${repo.port}"></constructor-arg>
        <constructor-arg value="${repo.sslPort}"></constructor-arg>
        <constructor-arg value="${repo.username}"></constructor-arg>
        <constructor-arg value="${repo.password}"></constructor-arg>
        <constructor-arg ref="repoClientBuilder"></constructor-arg>
    </bean>
    
    <bean id="localContentGetter" class="org.alfresco.cacheserver.LocalContentGetter">
        <constructor-arg ref="contentStore"/>
        <constructor-arg ref="textContentStore"/>
        <constructor-arg ref="contentDAO"/>
    </bean>

<!-- 
    <bean id="localContentGetter" class="org.alfresco.services.ContentGetterImpl">
        <constructor-arg value="${repo.hostname}"></constructor-arg>
        <constructor-arg value="${repo.port}"></constructor-arg>
        <constructor-arg value="${repo.sslPort}"></constructor-arg>
        <constructor-arg value="${repo.username}"></constructor-arg>
        <constructor-arg value="${repo.password}"></constructor-arg>
        <constructor-arg ref="repoClientBuilder"></constructor-arg>
    </bean>
 -->
    <bean id="cacheServerIdentity" class="org.alfresco.cacheserver.CacheServerIdentityImpl">
        <constructor-arg value="${cache.hostname}"></constructor-arg>
        <constructor-arg value="${server.connector.port}"></constructor-arg>
    </bean>

    <bean id="cacheHttpClient" class="org.alfresco.cacheserver.http.CacheHttpClient">
    <!-- 
        <constructor-arg value="${cache.socketTimeout}"/>
        <constructor-arg value="${cache.maxTotalConnections}"/>
        <constructor-arg value="${cache.maxHostConnections}"/>
        <constructor-arg value="${cache.connectionTimeout}"/>
        <constructor-arg value="${cache.baseUrl}"/>
         -->
    </bean>

    <bean id="cacheMessageProducer" class="org.gytheio.messaging.camel.CamelMessageProducer">
       <property name="producer" ref="camelProducerTemplate" />
       <property name="endpoint" value="direct-vm:alfresco.events.edge" />
    </bean>

    <bean id="cacheServer" class="org.alfresco.cacheserver.CacheServer">
        <constructor-arg ref="contentDAO"></constructor-arg>
        <constructor-arg ref="contentStore"></constructor-arg>
        <constructor-arg ref="entitiesService"></constructor-arg>
        <constructor-arg ref="alfrescoApi"></constructor-arg>
        <constructor-arg ref="cacheServerIdentity"></constructor-arg>
        <constructor-arg ref="cacheMessageProducer"/>
        <constructor-arg ref="contentGetter"/>
        <constructor-arg ref="checksumService"/>
        <constructor-arg ref="transformService"/>
    </bean>

</beans>